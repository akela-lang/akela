use lib::base::*;

Test_suite {
    .name = @file_name()

    Test {
        .name = "declare and use an integer"
        .source = Source {
            "const a: Int32 = 105\n"
            "a\n"
        }
        .solo = true
        .has_error = false

        const stmts = Ast {
            .type = Ast_type::Stmts
            .tu = Type_use {
                .td = Td_int32
            }
        }

        stmts

        # line 1
        const let_stmt = Ast {
            .@child_of(stmts)
            .type = Ast_type::Const
        }

        const let_lseq = Ast {
            .@child_of(let_stmt)
            .type = Ast_type::Let_lseq
        }

        const let_a = Ast {
            .@child_of(let_lseq)
            .type = Ast_type::Id
            .value = "a"
        }

        const let_type = Ast {
            .@child_of(let_stmt)
            .type = Ast_type::Type
            .tu = Type_use {
                .td = Td_int32
            }
        }

        const let_rseq = Ast {
            .@child_of(let_stmt)
            .type = Ast_type::Let_rseq
        }

        const let_number = Ast {
            .@child_of(let_rseq)
            .type = Ast_type::Number
            .value = "105"
            .tu = Type_use {
                .td = Td_int32
            }
        }

        # line 2
        const add_a = Ast {
            .@child_of(stmts)
            .type = Ast_type::Id
            .value = "a"
            .tu = Type_use {
                .td = Td_int32
            }
        }
    }
    Test {
        .name = "declare and use an integer 2"
        .source = Source {
            "const a: Int32 = 105\n"
            "a\n"
        }
        .solo = true
        .has_error = false

        Ast {
            .type = Ast_type::Stmts
            .tu = Type_use {
                .td = Td_int32
            }
            Ast {
                .type = Ast_type::Const
                Ast {
                    .type = Ast_type::Let_lseq
                    Ast {
                        .type = Ast_type::Id
                        .value = "a"
                    }
                }
                Ast {
                    .type = Ast_type::Type
                    .tu = Type_use {
                        .td = Td_int32
                    }
                }
                Ast {
                    .type = Ast_type::Let_rseq
                    Ast {
                        .type = Ast_type::Number
                        .value = "105"
                        .tu = Type_use {
                            .td = Td_int32
                        }
                    }
                }
            }
            Ast {
                .type = Ast_type::Id
                .value = "a"
                .tu = Type_use {
                    .td = Td_int32
                }
            }
        }
    }
}
