use lib::base::*;

Test_suite {
    .name = @file_name()

    Test {
        .name = "declare and use an integer"
        .source = Source {
            "let a: Int32 = 105\n"
            "a\n"
        }
        .solo = true
        .has_error = false

        let stmts = Ast {
            .type = Ast_type::Stmts
            .tu = Type_use {
                .td = Td_int32
            }
        }

        stmts

        # line 1
        let let_stmt = Ast {
            .@child_of(stmts)
            .type = Ast_type::Let
        }

        let let_lseq = Ast {
            .@child_of(let_stmt)
            .type = Ast_type::Let_lseq
        }

        let let_a = Ast {
            .@child_of(let_lseq)
            .type = Ast_type::Id
            .value = "a"
        }

        let let_type = Ast {
            .@child_of(let_stmt)
            .type = Ast_type::Type
            .tu = Type_use {
                .td = Td_int32
            }
        }

        let let_rseq = Ast {
            .@child_of(let_stmt)
            .type = Ast_type::Let_rseq
        }

        let let_number = Ast {
            .@child_of(let_rseq)
            .type = Ast_type::Number
            .value = "105"
            .tu = Type_use {
                .td = Td_int32
            }
        }

        # line 2
        let add_a = Ast {
            .@child_of(stmts)
            .type = Ast_type::Id
            .value = "a"
            .tu = Type_use {
                .td = Td_int32
            }
        }
    }
}